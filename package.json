{
  "name": "node-mocha-chai-lib",
  "version": "0.1.1",
  "description": "Stencil based on node with mocha and chai",
  "main": "lib/index.js",
  "engines": {
    "node": ">= 6"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "babel": "babel src -d lib",
    "babel:watch": "watch 'npm run babel' ./src",
    "build": "yarn clean && yarn babel",
    "lint": "eslint src test",
    "test:unit": "mocha -r babel-register test/",
    "test": "yarn lint && yarn test:unit",
    "test:watch": "watch 'npm run test' ./src ./test",
    "clean": "rm -rf ./lib",
    "release:git": "/bin/bash ./ci/git-release.sh",
    "release:npm": "/bin/bash ./ci/npm-release.sh",
    "release": "yarn release:git && yarn release:npm"
  },
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "mocha": "^5.0.5",
    "watch": "^1.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xqstencils/node-mocha-chai-lib.git"
  },
  "keywords": [
    "node"
  ],
  "author": "Xiaoqi Cao<thomascxq@gmail.com>",
  "contributors": [
    "Xiaoqi Cao"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xqstencils/node-mocha-chai-lib/issues"
  },
  "homepage": "https://github.com/xqstencils/node-mocha-chai-lib#readme"
}
